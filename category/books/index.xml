               /media/advanr_hu36c24a842a9e9bf40e43ad55d78ead34_71791_1200x1200_fit_q75_h2_lanczos_3.webp 1200w&#34;
               src=&#34;https://lbmii.github.io/media/advanr_hu36c24a842a9e9bf40e43ad55d78ead34_71791_306faa8ff1d02fc2d938cf2cd22de44e.webp&#34;
               width=&#34;466&#34;
               height=&#34;760&#34;
               loading=&#34;lazy&#34; data-zoomable /&gt;&lt;/div&gt;
  &lt;/div&gt;&lt;figcaption data-pre=&#34;Figure&amp;nbsp;&#34; data-post=&#34;:&amp;nbsp;&#34; class=&#34;numbered&#34;&gt;
